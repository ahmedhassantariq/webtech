<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
          <ol class="carousel-indicators">
            <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
            <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
          </ol>
          <div class="carousel-inner">
            <div class="carousel-item active">
              <img class="d-block w-100" src="/assets/portfolio-1.jpg" alt="First slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/assets/portfolio-2.jpg" alt="Second slide">
            </div>
            <div class="carousel-item">
              <img class="d-block w-100" src="/assets/portfolio-3.jpg" alt="Third slide">
            </div>
          </div>
          <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
  </div>


<div class="portfolio-container">
  <h1>Portfolio</h1>
  <% for( let index = 0; index < products.length; index++ ) { %>


    <% if(index%2==0) { %>
  <div class="portfolio-content">
    <div class="portfolio-content-image-container-right">
      <img src="<%= products[index].image %>" />
    </div>
    <div class="portfolio-content-text-container-right">
      <div class="portfolio-content-text-right">
        <h3><%= products[index].title %></h3>
        <p><%= products[index].description %></p> 
      </div>
      </div>
  </div>
  <%}%>


  <% if(index%2==1) { %>
  <div class="portfolio-content">
    <div class="portfolio-content-text-container-left">
      <div class="portfolio-content-text-left">
        <h3><%= products[index].title %></h3>
        <p><%= products[index].description %></p>
      </div>
      </div>
      <div class="portfolio-content-image-container-left">
        <img src="<%= products[index].image %>" />
      </div>
  </div>

  <%}%>
  <% } %>

</div>