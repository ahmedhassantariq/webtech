        <% if (!user) { %>
        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
            <a class="dropdown-item" href="/cart">Cart</a>
            <div class="dropdown-divider"></div>
                <a class="dropdown-item" id="drop-item" href="/Login">Login</a>
                <a class="dropdown-item" id="drop-item" href="/register">Register</a>
            </div>
          </div>
          <% } else { %>
            
            <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                <% if (user && user.roles.includes('admin')) { %>
                    <a class="dropdown-item" href="/manage">Manage-Shop</a>
                    <a class="dropdown-item" href="/portfolio-manage">Manage-Portfolio</a>
                    <a class="dropdown-item" href="/contact-manage">Manage-Contacts</a>
