<div>
<h1>Manage Products</h1>
<a href="/manage/new">Add New Product</a>
<table class="table table-striped">
    <thead>
      <tr>
        <th scope="col">#</th>
        <th scope="col">Image</th>
        <th scope="col">Title</th>
        <th scope="col">Description</th>
        <th scope="col">Price</th>
        <th scope="col">Featured</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        <% for( let index = 0; index < products.length; index++ ) { %>
            <tr>
                <th scope="row"><%= index+1 %></td>
                <td><img src="<%= products[index].image %>" width="50px"/></td>
                <td><%= products[index].title %></td>
                <td><%= products[index].description %></td>
                <td><%= products[index].price %></td>
                <td><%= products[index].isFeatured %></td>
                <td>
                        <a href="/manage/delete/<%= products[index]._id %>">Del</a>
                        <a href="/manage/edit/<%= products[index]._id %>">Edit</a>
                </td>
                
            </tr>
        <% } %>
    </tbody>
</table>
</div>